<!DOCTYPE HTML>
<html>
	<h1>All tasks</h1>

	<div>
		<%= link_to "New", "/new" %>
		<%= link_to "Search", "/search" %>

		<br>

		<% @tasks.each do |t| %>
			<div>
				<%= link_to t.head, task_path(t) %>
				
				<br>
				Tags: 

				<% @tags.each do |tg| %>
					<% if tg.task_id == t.id %>
						<%= tg.name %>,
					<% end %>
				<% end %>

				<br>
			</div>
		<% end %>
	</div>
</html>