<!DOCTYPE HTML>
<html>
	<!-- view all tasks -->
	
	
	<h1>All tasks</h1>

	<div>
		<table>
			<th>
				<tr>
					<td class="table_header">Task</td>
					<td class="table_header">Created</td>
					<td class="table_header">Updated</td>
				</tr>
			</th>
			<% @tasks.each do |t| %>
				<tr>
					<td>
						<div class="task_overview">
							<%= link_to t.head, task_path(t), class: "task_title_link"%>
							
							<br>
							Tags:

							<% t.tags.each do |tg| %>
								<%= tg.name %>, 
							<% end %>

							<br>
						</div>
					</td>
					<td>
						<%= t.created_at %>
					</td>
					<td>
						<%= t.updated_at %>
					</td>
				</tr>
			<% end %>
		</table>
	</div>
</html>