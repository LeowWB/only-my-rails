<!DOCTYPE HTML>
<html>
	<h1>All tasks</h1>

	<div>
		<%= link_to "New", "/new" %>
		<%= link_to "Search", "/search" %>

		<br>

		<% @tasks.each do |t| %>
			<div>
				<%= link_to t.head, task_path(t) %>
				
				<br>
				Tags:

				<% t.tags.each do |tg| %>
					<%= tg.name %>, 
				<% end %>

				<br>
			</div>
		<% end %>
	</div>
</html>