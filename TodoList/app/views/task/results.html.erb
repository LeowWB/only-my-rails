<!DOCTYPE html>
<html>
	<!-- search results -->
	
	
	<h1>Search Results</h1>
	<div>
		<!-- if no results are found then indicate this to the user -->
		<% if @results.length == 0 %>
			No results found.
		<% else %>
			<% @results.each do |t| %>
				<div class="task_overview">
					<%= link_to t.head, task_path(t), class: "task_title_link"%>
					
					<br>
					Tags: 

					<!-- for all tasks, display a list of that task's tags underneath the task -->
					<% t.tags.each do |tg| %>
						<%= tg.name %>,
					<% end %>

					<br>
				</div>
			<% end %>
		<% end %>

		<%= link_to "Back to search", "/search" %>
	</div>
</html>